{
	"compilerOptions": {
		"sourceMap": true,
		"target": "es2017",
		"outDir": "./dist",
		"baseUrl": "./src",
		"moduleResolution": "node",
		"alwaysStrict": true,
		"noImplicitAny": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
